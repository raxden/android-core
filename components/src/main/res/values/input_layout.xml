<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Attributes -->

    <attr name="hintType">
        <flag name="none" value="0" />
        <flag name="fixed" value="1" />
        <flag name="fixedToLeft" value="2" />
    </attr>

    <attr name="hintGravity">
        <flag name="bottom" value="80" />
        <flag name="center" value="17" />
        <flag name="center_horizontal" value="1" />
        <flag name="center_vertical" value="16" />
        <flag name="clip_horizontal" value="8" />
        <flag name="clip_vertical" value="128" />
        <flag name="end" value="8388613" />
        <flag name="fill" value="119" />
        <flag name="fill_horizontal" value="7" />
        <flag name="fill_vertical" value="112" />
        <flag name="left" value="3" />
        <flag name="right" value="5" />
        <flag name="start" value="8388611" />
        <flag name="top" value="48" />
    </attr>

    <declare-styleable name="InputLayoutView">
        <attr name="android:text" />
        <attr name="android:hint" />
        <attr name="android:gravity" />
        <attr name="hintGravity" />
        <attr name="android:imeOptions" />
        <attr name="android:nextFocusForward" />
        <attr name="android:nextFocusUp" />
        <attr name="android:nextFocusDown" />
        <attr name="android:nextFocusRight" />
        <attr name="android:nextFocusLeft" />
        <attr name="android:maxLength" />
        <attr name="android:inputType" />
        <attr name="android:enabled" />
        <attr name="android:focusable" />
        <attr name="android:maxLines" />
        <attr name="passwordToggleEnabled" />
        <attr name="hintAnimationEnabled" />
        <attr name="hintType" />
        <attr name="hintWidth" format="dimension" />
        <attr name="counterEnabled" />
        <attr name="counterMaxLength" />
        <attr name="mask" format="string" />
        <attr name="notMaskedSymbol" format="string" />
        <attr name="editable" format="boolean" />
        <attr name="minHeightEnabled" format="boolean" />
    </declare-styleable>

    <!-- Styles -->

    <style name="BaseTextInputLayout" parent="Theme.Design.Light">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#BEBEBE</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlNormal">@android:color/black</item>
        <item name="colorControlActivated">#3d3d3d</item>
    </style>

    <style name="TextAdvancedInputLayout">
        <item name="android:minHeight">85dp</item>
        <item name="android:theme">@style/BaseTextInputLayout</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:inputType">text|textCapSentences</item>
        <item name="android:gravity">top|left</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">45dp</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeMaxTextSize">14sp</item>
    </style>

</resources>
