<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Attributes -->

    <declare-styleable name="ProgressView">
        <attr name="progressText" format="string" />
        <attr name="progressIndeterminateTint" format="color" />
        <attr name="progressBackgroundColor" format="color" />
        <attr name="progressTextColor" format="reference|color" />
    </declare-styleable>

    <!-- Styles -->

    <style name="BaseProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:theme">@style/Theme.AppCompat.Light</item>
        <item name="android:progressTint">@android:color/white</item>
    </style>

    <style name="BaseProgressHorizontalBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:theme">@style/Theme.AppCompat.Light</item>
        <item name="android:progressTint">@android:color/white</item>
    </style>

    <!-- ========================================================================= -->

    <style name="ProgressBar" parent="BaseProgressBar">

    </style>


    <style name="ProgressHorizontalBar" parent="BaseProgressHorizontalBar">

    </style>

</resources>
