<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.core.app.ui.screens.project.list.ProjectListViewModel" />

        <variable
            name="position"
            type="Integer" />

        <variable
            name="item"
            type="com.core.domain.Project" />
    </data>

    <com.core.app.ui.components.ProjectListItemView
        android:id="@+id/card_item_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:onClick="@{()-> viewModel.onItemSelected(position)}"
        app:item="@{item}" />

</layout>